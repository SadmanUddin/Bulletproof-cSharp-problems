using System;

namespace sadman
{
    internal class Program
    {
        static void Main(string[] args)
        {
              try
  {
      int N = Convert.ToInt32(Console.ReadLine());

      int sum = 0;

      for(int i = 1; i<N; i++)
      {
          sum+=i*i;
      }
      Console.WriteLine(sum);
  }
  catch (FormatException)
  {
      Console.WriteLine("converting problem");
  }
        }
    }
}
